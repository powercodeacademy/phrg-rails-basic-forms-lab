<h1>Create a New Puppy</h1>
<%= form_with model: @puppy do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :breed %>
  <%= f.text_field :breed %>
  <%= f.label :age %>
  <%= f.number_field :age %>
  <%= f.submit 'Create Puppy', id: 'submit' %>
<% end %>
